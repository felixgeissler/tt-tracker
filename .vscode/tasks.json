{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Serve",
      "icon": {
        "id": "server-process",
        "color": "terminal.ansiGreen"
      },
      "type": "shell",
      "command": "./pocketbase serve",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": "$go"
    },
    {
      "label": "Frontend: Serve",
      "icon": {
        "id": "server-process",
        "color": "terminal.ansiGreen"
      },
      "type": "shell",
      "command": "yarn workspace frontend run start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}
